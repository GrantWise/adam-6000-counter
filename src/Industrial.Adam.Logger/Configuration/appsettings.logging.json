{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Process"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Industrial.Adam.Logger.Infrastructure": "Debug",
        "Industrial.Adam.Logger.Services": "Information",
        "Industrial.Adam.Logger.Utilities": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/adam-counter-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {SourceContext} [{FunctionName}:{LineNumber}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/adam-counter-debug-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {SourceContext} [{FunctionName}:{LineNumber}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId",
      "WithProcessId",
      "WithProcessName"
    ],
    "Properties": {
      "Application": "Industrial.Adam.Logger",
      "Version": "1.0.0",
      "Environment": "Development"
    }
  },
  "Logging": {
    "LogPath": "logs/adam-counter-.log",
    "DebugLogPath": "logs/adam-counter-debug-.log",
    "JsonLogPath": "logs/adam-counter-json-.log",
    "RetainedFileCount": 30,
    "EnableJsonOutput": false
  },
  "AdamLogger": {
    "PollIntervalMs": 5000,
    "HealthCheckIntervalMs": 30000,
    "DemoMode": false,
    "EnablePerformanceLogging": true,
    "Devices": [
      {
        "DeviceId": "LINE1_ADAM",
        "IpAddress": "192.168.1.100",
        "Port": 502,
        "UnitId": 1,
        "TimeoutMs": 3000,
        "MaxRetries": 3,
        "Channels": [
          {
            "ChannelNumber": 0,
            "Name": "ProductionCounter",
            "RegisterAddress": 0,
            "RegisterCount": 2,
            "Enabled": true,
            "ValidationRules": {
              "MinValue": 0,
              "MaxValue": 4294967295,
              "MaxRatePerSecond": 1000
            }
          }
        ]
      }
    ],
    "InfluxDb": {
      "Url": "http://localhost:8086",
      "Token": "adam-super-secret-token",
      "Organization": "adam_org",
      "Bucket": "adam-counters",
      "WriteTimeout": 30000,
      "ReadTimeout": 30000,
      "BatchSize": 100,
      "FlushInterval": 10000
    }
  }
}