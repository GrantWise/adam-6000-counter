{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/oee-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5433;Database=adam_counters;Username=adam_user;Password=adam_password"
  },
  "Oee": {
    "Database": {
      "ConnectionString": "Host=localhost;Port=5433;Database=adam_counters;Username=adam_user;Password=adam_password"
    },
    "Cache": {
      "DefaultExpirationMinutes": 5
    },
    "Resilience": {
      "DatabaseRetry": {
        "MaxRetryAttempts": 3
      }
    },
    "Stoppage": {
      "DetectionEnabled": true,
      "DefaultDetectionThresholdMinutes": 5,
      "DefaultClassificationThresholdMinutes": 5,
      "DefaultAlertThresholdMinutes": 15,
      "MonitoringIntervalSeconds": 30,
      "MaxLinesPerCycle": 50,
      "CycleTimeoutSeconds": 120,
      "EnableDetailedLogging": false,
      "MaxConcurrency": 10,
      "MonitorIdleLines": true,
      "RecentActivityHours": 4,
      "LineConfigurations": {}
    },
    "SignalR": {
      "Enabled": true,
      "HubPath": "/stoppageHub",
      "ConnectionTimeoutSeconds": 30,
      "KeepAliveIntervalSeconds": 15,
      "ClientTimeoutIntervalSeconds": 60,
      "MaxMessageBufferSize": 32768,
      "EnableDetailedLogging": false,
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:3001",
        "https://oee-app.local"
      ],
      "EnableCompression": true,
      "MaxConcurrentConnections": 1000
    }
  },
  "StoppageMonitoring": {
    "IsEnabled": true,
    "MonitoringIntervalSeconds": 30,
    "MaxLinesPerCycle": 50,
    "CycleTimeoutSeconds": 120,
    "EnableDetailedLogging": false,
    "MaxConcurrency": 10,
    "MonitorIdleLines": true,
    "RecentActivityHours": 4
  },
  "OeeSettings": {
    "DefaultCalculationPeriodMinutes": 60,
    "MetricsRefreshIntervalSeconds": 5,
    "MaxHistoryDays": 30
  },
  "Resilience": {
    "Database": {
      "MaxRetryAttempts": 3,
      "BaseDelayMs": 500,
      "MaxDelayMs": 10000,
      "TimeoutSeconds": 30
    },
    "Http": {
      "MaxRetryAttempts": 3,
      "BaseDelayMs": 1000,
      "MaxDelayMs": 30000,
      "TimeoutSeconds": 60
    },
    "CircuitBreaker": {
      "FailureThreshold": 50,
      "DurationOfBreakSeconds": 30,
      "MinimumThroughput": 10,
      "SamplingDurationSeconds": 60
    }
  },
  "AllowedHosts": "*"
}