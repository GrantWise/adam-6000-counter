# Industrial Adam OEE API - Environment Variables Template
# Copy the root .env.template to .env.local and configure these specific settings

# =============================================================================
# OEE API SPECIFIC SETTINGS
# =============================================================================
# API configuration
ASPNETCORE_URLS=http://+:5001
ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# DATABASE CONNECTION
# =============================================================================
# These will override the root .env.local settings if needed
# TIMESCALE_HOST=localhost
# TIMESCALE_PORT=5433
# TIMESCALE_DATABASE=adam_counters
# TIMESCALE_USERNAME=adam_user
# TIMESCALE_PASSWORD=your_secure_password

# =============================================================================
# OEE CALCULATION SETTINGS
# =============================================================================
OEE_DEFAULT_CALCULATION_PERIOD_MINUTES=60
OEE_METRICS_REFRESH_INTERVAL_SECONDS=5
OEE_MAX_HISTORY_DAYS=30

# =============================================================================
# STOPPAGE MONITORING
# =============================================================================
STOPPAGE_DETECTION_ENABLED=true
STOPPAGE_DEFAULT_THRESHOLD_MINUTES=5
STOPPAGE_MONITORING_INTERVAL_SECONDS=30
STOPPAGE_MAX_LINES_PER_CYCLE=50

# =============================================================================
# SIGNALR CONFIGURATION
# =============================================================================
SIGNALR_ENABLED=true
SIGNALR_HUB_PATH=/stoppageHub
SIGNALR_CONNECTION_TIMEOUT_SECONDS=30
SIGNALR_KEEP_ALIVE_INTERVAL_SECONDS=15

# =============================================================================
# CACHING
# =============================================================================
CACHE_DEFAULT_EXPIRATION_MINUTES=5

# =============================================================================
# RESILIENCE SETTINGS
# =============================================================================
DATABASE_MAX_RETRY_ATTEMPTS=3
DATABASE_BASE_DELAY_MS=500
DATABASE_TIMEOUT_SECONDS=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=Information
LOG_FILE_RETENTION_DAYS=7