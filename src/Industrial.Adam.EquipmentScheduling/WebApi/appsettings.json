{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Industrial.Adam.EquipmentScheduling": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "EquipmentScheduling": "Host=${EQUIPMENT_SCHEDULING_HOST};Database=${EQUIPMENT_SCHEDULING_DATABASE};Username=${EQUIPMENT_SCHEDULING_USERNAME};Password=${EQUIPMENT_SCHEDULING_PASSWORD};Port=${EQUIPMENT_SCHEDULING_PORT};Pooling=true;MinPoolSize=5;MaxPoolSize=20;CommandTimeout=30;"
  },
  "EquipmentScheduling": {
    "SchemaName": "equipment_scheduling",
    "DefaultScheduleHorizonDays": 30,
    "MaxScheduleHorizonDays": 365,
    "AutoGenerateSchedules": true,
    "AssignmentExpirationWarningDays": 7,
    "Cache": {
      "Enabled": true,
      "DefaultExpirationMinutes": 15,
      "PatternExpirationMinutes": 60,
      "HierarchyExpirationMinutes": 30
    },
    "Retry": {
      "Enabled": true,
      "MaxAttempts": 3,
      "BaseDelayMs": 1000,
      "MaxDelayMs": 30000
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning",
        "Industrial.Adam.EquipmentScheduling": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/equipment-scheduling-webapi-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "ApplicationName": "Equipment.Scheduling.WebApi"
    }
  }
}