# Industrial Adam Equipment Scheduling API - Environment Variables Template
# Copy the root .env.template to .env.local and configure these specific settings

# =============================================================================
# EQUIPMENT SCHEDULING API SPECIFIC SETTINGS
# =============================================================================
# API configuration
ASPNETCORE_URLS=http://+:5002
ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# DATABASE CONNECTION
# =============================================================================
# These will override the root .env.local settings if needed
# EQUIPMENT_SCHEDULING_HOST=localhost
# EQUIPMENT_SCHEDULING_PORT=5432
# EQUIPMENT_SCHEDULING_DATABASE=equipment_scheduling
# EQUIPMENT_SCHEDULING_USERNAME=postgres
# EQUIPMENT_SCHEDULING_PASSWORD=your_secure_password

# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================
EQUIPMENT_SCHEDULING_SCHEMA_NAME=equipment_scheduling
EQUIPMENT_SCHEDULING_DEFAULT_HORIZON_DAYS=30
EQUIPMENT_SCHEDULING_MAX_HORIZON_DAYS=365
EQUIPMENT_SCHEDULING_AUTO_GENERATE=true
EQUIPMENT_SCHEDULING_ASSIGNMENT_WARNING_DAYS=7

# =============================================================================
# CACHING SETTINGS
# =============================================================================
CACHE_ENABLED=true
CACHE_DEFAULT_EXPIRATION_MINUTES=15
CACHE_PATTERN_EXPIRATION_MINUTES=60
CACHE_HIERARCHY_EXPIRATION_MINUTES=30

# =============================================================================
# RETRY POLICY
# =============================================================================
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=Information
LOG_FILE_RETENTION_DAYS=30