{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.Process"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Industrial.Adam.Logger.Infrastructure": "Information",
        "Industrial.Adam.Logger.Services": "Information",
        "Industrial.Adam.Logger.Examples": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {SourceContext:l} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/adam-examples-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {SourceContext:l} [{FunctionName}:{LineNumber}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId",
      "WithProcessId",
      "WithProcessName"
    ],
    "Properties": {
      "Application": "Industrial.Adam.Logger.Examples",
      "Version": "1.0.0",
      "Environment": "Development"
    }
  },
  "AdamLogger": {
    "PollIntervalMs": 2000,
    "HealthCheckIntervalMs": 10000,
    "DemoMode": true,
    "MaxConcurrentDevices": 1,
    "Devices": [
      {
        "DeviceId": "DEMO_ADAM_001",
        "IpAddress": "127.0.0.1",
        "Port": 502,
        "UnitId": 1,
        "TimeoutMs": 2000,
        "MaxRetries": 1,
        "Channels": [
          {
            "ChannelNumber": 0,
            "Name": "DemoCounter",
            "StartRegister": 0,
            "RegisterCount": 2,
            "Enabled": true,
            "MinValue": 0,
            "MaxValue": 4294967295,
            "ScaleFactor": 1.0,
            "Offset": 0.0,
            "DecimalPlaces": 0
          }
        ]
      }
    ],
    "InfluxDb": {
      "Url": "http://localhost:8086",
      "Token": "adam-super-secret-token",
      "Organization": "adam_org",
      "Bucket": "adam_counters",
      "Measurement": "counter_data",
      "WriteBatchSize": 50,
      "FlushIntervalMs": 5000
    }
  }
}