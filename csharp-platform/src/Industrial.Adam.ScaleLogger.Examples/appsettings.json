{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Industrial.Adam.ScaleLogger": "Debug"
    }
  },
  "ScaleLogger": {
    "Devices": [
      {
        "DeviceId": "scale001",
        "Name": "Production Line Scale 1",
        "Location": "Line A - Station 3",
        "Host": "192.168.1.100",
        "Port": 502,
        "TimeoutMs": 5000,
        "Channels": [1, 2],
        "Manufacturer": "Mettler Toledo",
        "Model": "IND780"
      },
      {
        "DeviceId": "scale002", 
        "Name": "QC Testing Scale",
        "Location": "Quality Control Lab",
        "Host": "192.168.1.101",
        "Port": 502,
        "TimeoutMs": 5000,
        "Channels": [1],
        "ProtocolTemplate": "generic-scale"
      }
    ],
    "PollIntervalMs": 5000,
    "HealthCheckIntervalMs": 30000,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "InfluxDb": {
      "Url": "http://localhost:8086",
      "Token": "your-influxdb-token-here",
      "Organization": "manufacturing",
      "Bucket": "scale_data",
      "BatchSize": 100,
      "FlushIntervalMs": 5000
    },
    "Discovery": {
      "Enabled": true,
      "TimeoutSeconds": 60,
      "TemplatesPath": "./Templates",
      "ValidationReadings": 5
    }
  }
}