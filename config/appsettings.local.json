{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Industrial.Adam.Logger.Core": "Debug"
    }
  },
  "AdamLogger": {
    "GlobalPollIntervalMs": 5000,
    "HealthCheckIntervalMs": 10000,
    "DemoMode": false,
    "Devices": [
      {
        "DeviceId": "SIM-6051-01",
        "Name": "Local Test Simulator",
        "IpAddress": "localhost",
        "Port": 5502,
        "UnitId": 1,
        "Enabled": true,
        "PollIntervalMs": 5000,
        "TimeoutMs": 3000,
        "MaxRetries": 2,
        "KeepAlive": true,
        "Channels": [
          {
            "ChannelNumber": 0,
            "Name": "Test Counter 1",
            "StartRegister": 0,
            "RegisterCount": 2,
            "Enabled": true,
            "ScaleFactor": 1.0,
            "Unit": "items",
            "MinValue": 0,
            "MaxValue": 4294967295,
            "MaxChangeRate": 1000
          },
          {
            "ChannelNumber": 1,
            "Name": "Test Counter 2",
            "StartRegister": 2,
            "RegisterCount": 2,
            "Enabled": true,
            "ScaleFactor": 1.0,
            "Unit": "items",
            "MinValue": 0,
            "MaxValue": 4294967295,
            "MaxChangeRate": 100
          }
        ]
      }
    ],
    "TimescaleDb": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "adam_counters",
      "Username": "${TIMESCALEDB_USERNAME}",
      "Password": "${TIMESCALEDB_PASSWORD}",
      "TableName": "counter_data",
      "BatchSize": 5,
      "BatchTimeoutMs": 10000,
      "FlushIntervalMs": 10000,
      "EnableSsl": false,
      "TimeoutSeconds": 30,
      "MaxPoolSize": 20,
      "MinPoolSize": 2,
      "Tags": {
        "environment": "local_test",
        "source": "direct_simulator"
      }
    }
  }
}