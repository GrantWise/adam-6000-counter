{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Industrial.Adam.Logger.Core": "Debug"
    }
  },
  "AdamLogger": {
    "GlobalPollIntervalMs": 5000,
    "HealthCheckIntervalMs": 10000,
    "DemoMode": false,
    "Devices": [
      {
        "DeviceId": "ADAM001",
        "Name": "Production Line Counter 1",
        "IpAddress": "192.168.1.100",
        "Port": 502,
        "UnitId": 1,
        "Enabled": true,
        "PollIntervalMs": 1000,
        "TimeoutMs": 3000,
        "MaxRetries": 3,
        "KeepAlive": true,
        "Channels": [
          {
            "ChannelNumber": 0,
            "Name": "Product Counter",
            "StartRegister": 0,
            "RegisterCount": 2,
            "Enabled": true,
            "ScaleFactor": 1.0,
            "Unit": "items",
            "MinValue": 0,
            "MaxValue": 4294967295,
            "MaxChangeRate": 1000
          },
          {
            "ChannelNumber": 1,
            "Name": "Reject Counter",
            "StartRegister": 2,
            "RegisterCount": 2,
            "Enabled": true,
            "ScaleFactor": 1.0,
            "Unit": "items",
            "MinValue": 0,
            "MaxValue": 4294967295,
            "MaxChangeRate": 100
          }
        ]
      }
    ],
    "InfluxDb": {
      "Url": "http://localhost:8086",
      "Token": "your-influxdb-token-here",
      "Organization": "your-organization-name",
      "Bucket": "adam_counters",
      "MeasurementName": "counter_data",
      "BatchSize": 100,
      "BatchTimeoutMs": 5000,
      "FlushIntervalMs": 5000,
      "EnableGzip": true,
      "TimeoutSeconds": 30,
      "Tags": {
        "location": "factory_floor",
        "environment": "production"
      }
    }
  }
}